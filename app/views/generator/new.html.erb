<h1>Character Generator</h1>

<%= form_for :generator do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :class %><br>
    <%= f.text_field :class %>
  </p>
  
  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>
 
  <p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.label :stats %><br>
    <%= f.text_area :stats %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>